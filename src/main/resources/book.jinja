<!doctype html>
<html>
<head>
    <title>{{ title }}</title>
    <meta http-equiv="content-type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<mbp:pagebreak/>
{% for section_name, section in sections.items() -%}
    <a name="{{ section['id'] }}"><h1>{{ section_name }}</h1></a>
    <ul>
        {% for article in section['articles'] -%}
            <li><a style="text-decoration: none !important" href="#{{ article['id'] }}">{{ article['title'] }}</a></li>
        {% endfor -%}
    </ul>
    <mbp:pagebreak/>
    {% for article in section['articles'] -%}
        <a name="{{ article['id'] }}"><h3 itemprop="alternativeHeadline">{{ article['subheadline'] }}</h3></a>
        <h1 itemprop="headline">{{ article['title'] }}</h1>
        {% if article['dateline'] -%}
            <p style="top-margin: 1.5em;"><i>{{ article['dateline'] }}</i></p>
        {% endif -%}
        {% if article['description'] -%}
            <p style="bottom-margin: 1em;"><i>{{ article['description'] }}</i></p>
        {% endif -%}
        {% if article['image'] -%}
            <p style="bottom-margin: 1em;"><img src="{{ article['image'] }}" alt=""/></p>
        {% endif -%}
        {{ article['text'] }}
        <mbp:pagebreak/>
    {% endfor -%}
{% endfor -%}
</body>
</html>
