<!doctype html>
<html>
<head>
    <title>{{ title }}</title>
    <meta http-equiv="content-type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="style.css">
</head>
<body>
{% for section_name, section in sections.items() -%}
    <a name="{{ section['id']}}"><h1>{{ section_name }}</h1></a>
    <ul>
        {% for article in section['articles'] -%}
            <li><a href="#{{ article['id'] }}">{{ article['title'] }}</a></li>
        {% endfor -%}
    </ul>
    <mbp:pagebreak/>
    {% for article in section['articles'] -%}
        <a name="{{ article['id'] }}"><h3 itemprop="alternativeHeadline">{{ article['subheadline'] }}</h3></a>
        <h2 style="margin: 1.5em;" itemprop="headline">{{ article['title'] }}</h2>
        {% if article['image'] -%}
            <img src="{{ article['image'] }}" alt=""/>
        {% endif -%}
        {% if article['description'] -%}
            <p style="margin: 1.5em;"><i>{{ article['description'] }}</i></p>
        {% endif -%}
        {{ article['text'] }}
        <mbp:pagebreak/>
    {% endfor -%}
{% endfor -%}
</body>
</html>
