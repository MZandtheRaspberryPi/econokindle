<!doctype html>
<html>
<head>
    <title>{{ title }}</title>
    <meta http-equiv="content-type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="style.css">
</head>
<body>
{% set navPointId = [True] -%}
{% for section, articles in sections.items() -%}
    {% if section != 'HIDDEN' -%}
        <h1>{{ section }}</h1>
    {% endif -%}
    <mbp:pagebreak/>
    {% for article in articles -%}
        {% if navPointId.append(True) -%}dummy{% endif -%}
        <h3 itemprop="alternativeHeadline">{{ article['subheadline'] }}</h3>
        <a name="article_{{ navPointId|length }}"><h2 style="margin: 1.5em;" itemprop="headline">{{ article['title'] }}</h2></a>
        {% if article['image'] -%}
            <img src="{{ article['image'] }}" alt=""/>
        {% endif -%}
        {% if article['description'] -%}
            <p style="margin: 1.5em;"><i>{{ article['description'] }}</i></p>
        {% endif -%}
        {{ article['text'] }}
        <mbp:pagebreak/>
    {% endfor -%}
{% endfor -%}
</body>
</html>
